@{
    ViewBag.Title = "Index";
}

<div class="faq-area">
    <div class="container">

        <div class="col-md-6 col-xs-12 fadeInRight wow">
            <div class="faq-form form-style">

                <div class="row">
                    <div class="col-md-6 col-xs-12 fadeInRight wow">
                        <div class="faq-form form-style">
                            <div class="cf-msg"></div>


                            @using (Html.BeginForm("Create", "Empresa"))
                            {
                                <form action="#" method="post">
                                    <div class="row">

                                        <div class="col-xs-12">
                                            <span>Nombre</span>
                                            @Html.TextBox("name")
                                        </div>
                                        <div class="col-xs-12">
                                            <span>RUC</span>
                                            @Html.TextBox("ruc")
                                        </div>
                                        <div class="col-xs-12">
                                            <span>Prestigio</span>
                                            @Html.TextBox("prestigio")
                                        </div>
                                       
                                        <input type="submit" value="Registrarse" />
                                    </div>
                                </form>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



